<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<blueprint xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd" >

  <bean id="topologyManager" class="com.hmsonline.storm.osgi.TopologyManager"/>
  
  <service id="topologyService" activation="eager" ref="topologyManager" interface="storm.starter.WordCountTopology"/>
  
  <reference-list id="serviceReferenceListOne" 
                   interface="java.io.Serializable" 
                   member-type="service-object"/>
    <reference-listener ref="bundle-activator" bind-method="onBindService" unbind-method="onUnbindService"/>
    <registration-listener 
              registration-method="register" unregistration-method="unregister">
          <bean class="org.apache.geronimo.osgi.RegistrationListener"/>         
      </registration-listener>
  </reference>
</blueprint>