<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

  <bean id="topologyManager" class="com.hmsonline.storm.osgi.impl.TopologyManager">
    <property name="clojureLoader">
      <reference interface="clojure.osgi.IClojureLoader"/>
    </property>
  </bean>
  
  <!--<service id="topologyService" activation="eager" ref="topologyManager" interface="com.hmsonline.storm.osgi.impl.TopologyManager">
  </service>-->
  
  <reference-list id="topologyList" interface="com.hmsonline.storm.osgi.topology.ITopologyDefinition" member-type="service-object" availability="optional">
    <reference-listener ref="topologyManager" bind-method="onBindService" unbind-method="onUnbindService"/>
  </reference-list>
</blueprint>